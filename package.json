    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.7.0",
    "nodemon": "^3.0.2",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2"
  },
  "husky": {
    "hooks": {
